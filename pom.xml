				<configuration>
					<projectName>TifChannels_to_HPA_PNG_JPEG_Main_JNH</projectName>
					<organizationName>Jan N. Hansen</organizationName>
					<descriptorRefs>
            			<descriptorRef>jar-with-dependencies</descriptorRef>
          			</descriptorRefs>
					<archive>
						<manifest>
							<mainClass>${main-class}</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>
